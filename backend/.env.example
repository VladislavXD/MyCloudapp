# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=password
DB_NAME=vps_billing

# Database Pool Configuration (for memory optimization)
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=50

# Server Configuration
PORT=5000
NODE_ENV=development

# Security
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Session Configuration (Production: Use Redis)
# For production, configure Redis session store to prevent memory leaks
# SESSION_STORE=redis
# REDIS_URL=redis://localhost:6379

# PayMe Configuration
PAYME_MERCHANT_ID=your-merchant-id
PAYME_SECRET_KEY=your-secret-key
PAYME_USE_RETURN_URL=false
RETURN_URL=https://yourdomain.com/payment/callback

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Monitoring & Performance
# Enable verbose logging in development
LOG_LEVEL=info

# Performance Testing
# API_URL=http://localhost:5000
